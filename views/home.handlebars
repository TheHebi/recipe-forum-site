<main class="container custom-wrapper-all">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12 mt-5 d-flex flex-column">
            <div class="col-12">
                <div class="card bg-warning">
                    <h3 class="text-center p-2">Recipe List</h3>
                </div>
            </div>

            <div class="list-group p-3 mb-5">
                {{#each posts as |post|}}
                {{> post-info}}
                {{/each}}
            </div>

        </div>
    </div>
</main>