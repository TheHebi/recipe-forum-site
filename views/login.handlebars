<main class="container mt-4 custom-wrapper-all">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-6 col-sm-12 d-flex flex-column">
            <div class="col-12">
                <h2 class="text-center">Log in:</h2>
            </div>
            <hr class="my-3">
            <div class="col-12">
                <div class="card bg-light">
                    <form class="d-flex flex-column m-3" id="loginForm">
                        <div class="form-group p-2">
                            <label for="loginUsername"><strong><i class="fas fa-user"></i> Username</strong></label>
                            <input id="loginUsername" placeholder="Username" type="text" class="form-control" />
                        </div>
                        <div class="form-group p-2">
                            <label for="loginPassword"><strong><i class="fas fa-key"></i> Password</strong></label>
                            <input id="loginPassword" placeholder="Password" type="password" class="form-control" />
                        </div>
                        <div class="form-group p-2 text-center">
                            <button type="submit" class="btn btn-danger w-100" id="loginBtn"><i
                                        class="fas fa-sign-in-alt"></i> Login</button>
                        </div>
                        <div class="form-group p-2">
                            <p class="text-center">Do not have an account?</p>
                            <a href="/signup"><button type="button" class="btn btn-danger w-100"><i
                                        class="fas fa-user-plus"></i>
                                    Create an
                                    account</button></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/js/login.js"></script>