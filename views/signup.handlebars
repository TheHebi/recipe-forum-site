<main class="container mt-4 custom-wrapper-all">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-6 col-sm-12 d-flex flex-column">
            <div class="col-12">
                <h2 class="text-center">Create an Account:</h2>
            </div>
            <hr class="my-3">
            <div class="col-12">
                <div class="card bg-light">
                    <form class="d-flex flex-column m-3" id="signupForm">
                        <div class="form-group p-2">
                            <label for="signupEmail"><strong><i class="fas fa-at"></i> Email</strong></label>
                            <input id="signupEmail" placeholder="Email" type="email" class="form-control" />
                        </div>
                        <div class="form-group p-2">
                            <label for="signupUsername"><strong><i class="fas fa-user"></i> Username</strong></label>
                            <input id="signupUsername" placeholder="Username" type="text" class="form-control" />
                        </div>
                        <div class="form-group p-2">
                            <label for="signupPassword"><strong><i class="fas fa-key"></i> Password</strong></label>
                            <input id="signupPassword" placeholder="Password" type="password" class="form-control" />
                        </div>
                        <div class="form-group p-2 text-center">
                            <button type="submit" class="btn btn-danger w-100">
                                    <i class="fas fa-user-plus"></i> Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/js/signup.js"></script>